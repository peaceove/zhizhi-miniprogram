/* index.wxss */
/* 整体页面样式 */
.scrollarea {
  background-color: #f5f8f2;
}

/* 顶部导航栏样式 */
.header {
  display: flex;
  flex-direction: column;
  padding: 30rpx 24rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.logo-container {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.logo {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
  border-radius: 50%;
  background-color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.search-box {
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: white;
  placeholder-color: rgba(255, 255, 255, 0.7);
}

/* 智能生成区域样式 */
.intelligent-area {
  padding: 24rpx;
  background-color: white;
  margin: 24rpx 24rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.area-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.user-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  resize: none;
}

.generate-btn {
  width: 100%;
  height: 80rpx;
  margin-top: 24rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.quick-options {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.option-tag {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  margin-bottom: 16rpx;
  background-color: #f1f8e9;
  color: #2E7D32;
  font-size: 24rpx;
  border-radius: 20rpx;
}

/* 参数展示区域样式 */
.parameter-area {
  padding: 24rpx;
  background-color: white;
  margin: 24rpx 24rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.parameters-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.param-card {
  padding: 24rpx;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}

.param-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.param-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.param-status {
  display: inline-block;
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 12rpx;
}

.normal {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.warning {
  background-color: #fff3e0;
  color: #f57c00;
}

.alert {
  background-color: #ffebee;
  color: #d32f2f;
}

.chart-container {
  width: 100%;
  height: 320rpx;
}

.trend-chart {
  width: 100%;
  height: 100%;
}

/* 分类引导区域样式 */
.category-area {
  padding: 24rpx;
  background-color: white;
  margin: 24rpx 24rpx 120rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.category-tabs {
  display: flex;
  margin-bottom: 24rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-bottom: 2rpx solid #e0e0e0;
}

.active {
  color: #2E7D32;
  font-weight: bold;
  border-bottom: 4rpx solid #4CAF50;
}

.category-content {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.scenario-card {
  width: calc(50% - 10rpx);
  background-color: #f9f9f9;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.scenario-img {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.scenario-name {
  padding: 16rpx 16rpx 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.scenario-desc {
  padding: 0 16rpx 16rpx;
  font-size: 24rpx;
  color: #666;
}

.plant-type {
  width: calc(33.33% - 13.33rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  background-color: #f9f9f9;
  border-radius: 16rpx;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.type-name {
  font-size: 26rpx;
  color: #333;
}

.knowledge-item {
  width: 100%;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
}

.knowledge-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.knowledge-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.knowledge-date {
  font-size: 20rpx;
  color: #999;
}

/* 底部导航样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  background-color: white;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #666;
}

.tab-item.active .tab-text {
  color: #4CAF50;
}
.plan-result {
  margin: 24rpx;
  padding: 32rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.result-icon {
  width: 40rpx;
  height: 40rpx;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

